
@model UserRoleEditViewModel

@{
    ViewData["Title"] = "Delete";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Users")">Users</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details","Users", new { id = Model.UserId})">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Role</li>
    </ol>
</nav>


<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Are you sure you want to delete this record?
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">

                        <partial name="_ValidationSummary" />

                    </div>
                </div>


                <form asp-action="Delete">

                    <input type="hidden" asp-for="@Model.UserId" />
                    <input type="hidden" asp-for="@Model.RoleId" />

                    <div class="form-group">
                        <label>Role</label>
                        <input asp-for="@Model.Role" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <a asp-action="Details" asp-controller="Users" asp-route-id="@Model.UserId" class="btn btn-info">Cancel</a>
                        <input type="submit" class="btn btn-primary" value="YES" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
