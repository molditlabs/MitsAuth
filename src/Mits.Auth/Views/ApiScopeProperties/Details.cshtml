
@model ApiScopePropertyDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","ApiScopes")">Api Scopes</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details","ApiScopes", new { id=Model.ScopeId})">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page"> Property</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Api Scope Property
            </div>
            <div class="card-body">

                <input hidden asp-for="@Model.Id" />
                <input hidden asp-for="@Model.ScopeId" />

                <div class="form-group">
                    <label>Key</label>
                    <input asp-for="@Model.Key" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label>Value</label>
                    <input asp-for="@Model.Value" class="form-control" readonly />
                </div>

            </div>
        </div>
    </div>
</div>