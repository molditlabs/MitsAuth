
@model RoleEditViewModel

@{
    ViewData["Title"] = "Delete";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Roles")">Roles</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
               Are you sure you want to delete this record?
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">

                        <partial name="_ValidationSummary" />

                    </div>
                </div>

                <form asp-action="Delete">

                    <input hidden asp-for="@Model.Id" />

                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="@Model.Name" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-info">Cancel</a>
                        <input type="submit" class="btn btn-primary" value="YES" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
