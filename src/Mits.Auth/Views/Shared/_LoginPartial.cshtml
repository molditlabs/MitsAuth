@using Microsoft.AspNetCore.Identity
@using Mits.Auth.Data.Entities.AspNet
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a href="#" class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="btn btn-outline-danger" title="Logout"><i class="fa fa-sign-out-alt"></i> &nbsp; Logout</button>
            </form>
        </li>
    }
    </ul>
