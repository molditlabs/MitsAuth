@model UserClaimAddViewModel

@{
    ViewData["Title"] = "Add";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Users")">Users</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details","Users", new { id = Model.UserId})">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Claim</li>
    </ol>
</nav>


<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Add Claim
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">

                        <partial name="_ValidationSummary" />

                    </div>
                </div>

                <form asp-action="Add">

                    <input type="hidden" asp-for="@Model.UserId" />

                    <div class="form-group">
                        <label>Claim Type</label>
                        <input asp-for="ClaimType" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Claim Value</label>
                        <input asp-for="ClaimValue" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
