
@model ClientCorsOriginDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Clients")">Clients</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details","Clients", new { id=Model.ClientId})">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page"> CORS Orgin</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Client CORS Origin
            </div>
            <div class="card-body">

                <input hidden asp-for="@Model.Id" />
                <input hidden asp-for="@Model.ClientId" />

                <div class="form-group">
                    <label>Origin</label>
                    <input asp-for="@Model.Origin" class="form-control" readonly />
                </div>

            </div>
        </div>
    </div>
</div>