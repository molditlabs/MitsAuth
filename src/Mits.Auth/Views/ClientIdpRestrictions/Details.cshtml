
@model ClientIdpRestrictionDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Clients")">Clients</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details","Clients", new { id=Model.ClientId})">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page"> IdP Restriction</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Client IdP Restriction
            </div>
            <div class="card-body">

                <input hidden asp-for="@Model.Id" />
                <input hidden asp-for="@Model.ClientId" />

                <div class="form-group">
                    <label>Provider</label>
                    <input asp-for="@Model.Provider" class="form-control" readonly />
                </div>
                 
            </div>
        </div>
    </div>
</div>