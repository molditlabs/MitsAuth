
@model ClientIdpRestrictionAddViewModel

@{
    ViewData["Title"] = "Add";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Clients")">Clients</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details","Clients", new { id=Model.ClientId})">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add IdP Restriction</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Add Client IdP Restriction
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">

                        <partial name="_ValidationSummary" />

                    </div>
                </div>

                <form asp-action="Add">

                    <input hidden asp-for="@Model.ClientId" />

                    <div class="form-group">
                        <label>Provider</label>
                        <input asp-for="@Model.Provider" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>