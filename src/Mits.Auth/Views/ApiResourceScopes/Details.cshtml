
@model ApiResourceScopeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","ApiResources")">Api Resources</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Details","ApiResources", new { id=Model.ApiResourceId})">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page"> Scope</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                Api Resource Scope
            </div>
            <div class="card-body">

                <input hidden asp-for="@Model.Id" />
                <input hidden asp-for="@Model.ApiResourceId" />

                <div class="form-group">
                    <label>Scope</label>
                    <input asp-for="@Model.Scope" class="form-control" readonly />
                </div>

            </div>
        </div>
    </div>
</div>